{{#> layout}}
<div style="text-align: center;">
    <span class="badge" style="background: #ff9800;">{{t "orderEmail.admin.actionRequired"}}</span>
</div>

<p class="greeting">{{t "orderEmail.admin.greeting"}}</p>

<div class="info-box">
    <h3 style="color: var(--primary-color); margin-top: 0;">ğŸ“‹ {{t "orderEmail.admin.orderDetailsTitle"}}</h3>

    <div style="margin-bottom: 10px;">
        <span style="font-weight: bold; color: #666;">{{t "orderEmail.admin.orderNumberLabel"}}:</span>
        <span>{{orderId}}</span>
    </div>

    <div style="margin-bottom: 10px;">
        <span style="font-weight: bold; color: #666;">{{t "orderEmail.admin.orderDateLabel"}}:</span>
        <span>{{orderDate}}</span>
    </div>

    <div style="margin-bottom: 10px;">
        <span style="font-weight: bold; color: #666;">{{t "orderEmail.admin.invoiceLabel"}}:</span>
        <span>{{invoiceId}}</span>
    </div>

    <div style="margin-bottom: 10px;">
        <span style="font-weight: bold; color: #666;">{{t "orderEmail.admin.paymentLabel"}}:</span>
        <span>{{t "orderEmail.admin.paymentStatus"}}</span>
    </div>
</div>

<div class="info-box">
    <h3 style="color: var(--primary-color); margin-top: 0;">ğŸ‘¤ {{t "orderEmail.admin.customerInfoTitle"}}</h3>

    <div style="margin-bottom: 10px;">
        <span style="font-weight: bold; color: #666;">{{t "orderEmail.admin.nameLabel"}}:</span>
        <span>{{customerName}}</span>
    </div>

    <div style="margin-bottom: 10px;">
        <span style="font-weight: bold; color: #666;">{{t "orderEmail.admin.emailLabel"}}:</span>
        <span>{{customerEmail}}</span>
    </div>
</div>

<div class="info-box">
    <h3 style="color: var(--primary-color); margin-top: 0;">ğŸ“¦ {{t "orderEmail.admin.orderItemsTitle"}}</h3>

    {{#each lineItems}}
    <div style="display: flex; justify-content: space-between; padding: 10px 0; border-bottom: 1px solid #e0e0e0;">
        <div style="flex: 1; font-weight: 500;">{{this.description}}</div>
        <div style="color: #666; margin-right: 15px;">{{t "orderEmail.admin.quantityLabel"}}: {{this.quantity}}</div>
        <div style="font-weight: bold;">{{this.formattedAmount}}</div>
    </div>
    {{/each}}

    <div style="display: flex; justify-content: space-between; padding: 15px 0; margin-top: 15px; border-top: 2px solid var(--primary-color); font-size: 18px; font-weight: bold;">
        <div>{{t "orderEmail.admin.totalLabel"}}</div>
        <div>{{formattedTotal}}</div>
    </div>
</div>

<div style="background: #fff3cd; border-left: 4px solid #ffc107; padding: 15px; margin: 20px 0; border-radius: 4px;">
    <p style="margin: 0 0 10px 0;"><strong>âš ï¸ {{t "orderEmail.admin.actionRequiredTitle"}}</strong></p>
    <p style="margin: 0;">{{t "orderEmail.admin.actionRequiredMessage"}}</p>
</div>

<p class="centered">
    <a href="{{dashboardUrl}}" class="button">{{t "orderEmail.admin.viewDashboardButton"}}</a>
</p>

<p class="signature">{{t "orderEmail.admin.signature"}}</p>
{{/layout}}

