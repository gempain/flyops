{{#> layout}}
<div style="text-align: center;">
    <span class="badge">{{t "orderEmail.customer.paymentSuccessful"}}</span>
</div>

<p class="greeting">{{t "orderEmail.customer.greeting" name=name}}</p>

<p class="message">{{t "orderEmail.customer.confirmationMessage"}}</p>

<div class="info-box">
    <h3 style="color: var(--primary-color); margin-top: 0;">ðŸ“¦ {{t "orderEmail.customer.orderSummary"}}</h3>

    {{#each lineItems}}
    <div style="display: flex; justify-content: space-between; padding: 12px 0; border-bottom: 1px solid #e0e0e0;">
        <div style="flex: 1;">
            <div style="font-weight: 500; color: #333; margin-bottom: 4px;">{{this.description}}</div>
            <div style="color: #666; font-size: 14px;">{{t "orderEmail.customer.quantityLabel"}}: {{this.quantity}}</div>
        </div>
        <div style="font-weight: bold; color: #333; white-space: nowrap; margin-left: 15px;">{{this.formattedAmount}}</div>
    </div>
    {{/each}}

    <div style="display: flex; justify-content: space-between; padding: 20px 0 10px 0; margin-top: 15px; border-top: 2px solid var(--primary-color); font-size: 20px; font-weight: bold;">
        <div>{{t "orderEmail.customer.totalLabel"}}</div>
        <div>{{formattedTotal}}</div>
    </div>
</div>

<div style="background: #fff3cd; border-left: 4px solid #ffc107; padding: 15px; margin: 20px 0; border-radius: 4px;">
    <p style="margin: 8px 0; color: #856404;"><strong>{{t "orderEmail.customer.orderNumberLabel"}}:</strong> {{orderId}}</p>
    <p style="margin: 8px 0; color: #856404;"><strong>{{t "orderEmail.customer.orderDateLabel"}}:</strong> {{orderDate}}</p>
</div>

<p class="message">{{t "orderEmail.customer.nextStepsMessage"}}</p>

<p class="centered">
    <a href="{{trackOrderUrl}}" class="button">{{t "orderEmail.customer.trackOrderButton"}}</a>
</p>

<p class="signature">{{t "orderEmail.customer.signature"}}</p>

<p class="message">{{t "orderEmail.customer.footerMessage"}} <a href="{{contactUrl}}">{{t "orderEmail.customer.contactUs"}}</a></p>
{{/layout}}

