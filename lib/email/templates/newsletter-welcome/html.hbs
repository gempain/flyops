{{#> layout}}

<p class="greeting">{{t "newsletter.email.welcomeGreeting" name=name}}</p>

<p class="message">
    {{t "newsletter.email.welcomeTitle"}}
</p>

<p class="message">
    {{t "newsletter.email.welcomeText"}}
</p>

<div class="info-box">
    <p style="margin: 0; color: #666;">
        {{t "newsletter.email.welcomeUnsubscribeTitle"}}
    </p>
    <p style="margin: 10px 0 0 0;">
        <a href="{{unsubscribeUrl}}" style="color: var(--primary-color);">{{t "newsletter.email.welcomeUnsubscribeLink"}}</a>
    </p>
</div>

<p class="message">
    {{t "newsletter.email.welcomeRegards"}}
</p>

<p class="signature">{{t "newsletter.email.welcomeSignature"}}</p>

{{/layout}}
